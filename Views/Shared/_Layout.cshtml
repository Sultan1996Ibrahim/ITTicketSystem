@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var httpContext  = HttpContextAccessor.HttpContext;
    var userName     = httpContext?.Session.GetString("CurrentUserName") ?? "Guest";
    var roleString   = httpContext?.Session.GetString("CurrentRole") ?? "User";

    var controller   = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "");
    var action       = (ViewContext.RouteData.Values["action"]?.ToString() ?? "");
    bool isLoginPage = controller == "Account" && action == "Login";

    var brandAction = roleString == "Manager" ? "ManagerDashboard"
                    : roleString == "Admin"  ? "Dashboard"
                    : "Index";

    var brandController = roleString == "Admin" ? "Admin" : "Tickets";

    string Active(string c, string a = "")
    {
        var okC = string.Equals(controller, c, StringComparison.OrdinalIgnoreCase);
        if (string.IsNullOrWhiteSpace(a)) return okC ? "active" : "";
        var okA = string.Equals(action, a, StringComparison.OrdinalIgnoreCase);
        return (okC && okA) ? "active" : "";
    }

    string Initials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "U";
        return char.ToUpperInvariant(name.Trim()[0]).ToString();
    }

    // Navbar label change: Tickets -> My Tickets
    string ticketsNavLabel = "My Tickets";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketSystem</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITTicketSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        /* App layout */
        html { position: relative; min-height: 100%; }
        body.app-body { min-height: 100vh; display: flex; flex-direction: column; margin: 0; }
        .app-container { flex: 1 1 auto; }
        .app-footer { flex: 0 0 auto; }

        /* Loading overlay */
        .app-loading {
            position: fixed;
            inset: 0;
            background: rgba(255,255,255,.75);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            z-index: 2000;
        }

        /* Navbar */
        .navbar-logo { height:40px; width:auto; object-fit:contain; }
        .user-avatar{
            width:32px;height:32px;border-radius:50%;
            display:inline-flex;align-items:center;justify-content:center;
            background:#f1f3f5;font-weight:700;
        }

        /* Offcanvas sizing */
        .offcanvas.ticket-offcanvas { width: 740px; }
        @@media (max-width: 991.98px){
            .offcanvas.ticket-offcanvas { width: 94vw; }
        }

        /* Sticky header with a clean close button */
        .ticket-offcanvas .offcanvas-header{
            position: sticky;
            top: 0;
            z-index: 10;
            background: #fff;
            border-bottom: 1px solid rgba(0,0,0,.08);
            padding: .75rem 1rem;
        }

        .ticket-close-btn{
            width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
        }

        .ticket-offcanvas .offcanvas-body{
            padding: 1rem;
            overflow-x: hidden;
        }

        /* Grid (table header dropdown filters) */
        .grid-table-wrap {
            overflow-x: auto;
            overflow-y: visible; /* Prevent dropdown clipping when there are few rows */
        }

        .grid-head th {
            white-space: nowrap;
            position: relative;
        }

        .grid-head-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            font-weight: 700;
            color: inherit;
        }

        .grid-head-link:focus,
        .grid-head-link:hover {
            text-decoration: underline;
        }

        .grid-hint {
            font-size: .9rem;
            color: #6c757d;
            padding: .25rem .75rem 0 .75rem;
        }

        /* Make dropdown wider and more usable */
        .grid-head .dropdown-menu {
            width: 360px;
            padding: .75rem;
        }

        /* Ensure dropdown is not visually cut */
        .grid-head .dropdown {
            position: static; /* Improves dropdown position in tables */
        }

        .grid-filter-input {
            width: 100%;
        }

        .grid-sort-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: .5rem;
            margin-top: .75rem;
        }

        .grid-reset-row {
            margin-top: .75rem;
            display: flex;
            justify-content: flex-end;
        }
    </style>
</head>

<body class="app-body">

    <div id="appLoading" class="app-loading d-none">
        <div class="spinner-border" role="status" aria-label="Loading"></div>
        <div class="mt-2 small text-muted">Loading...</div>
    </div>

    <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm sticky-top">
            <div class="container-fluid">

                <a class="navbar-brand fw-semibold"
                   asp-controller="@brandController"
                   asp-action="@brandAction">
                    TicketSystem
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNavbar" class="collapse navbar-collapse">
                    @if (!isLoginPage)
                    {
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            @if (roleString == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @Active("Admin","Dashboard")" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-speedometer2 me-1"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @Active("Admin","Index")" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-people me-1"></i> Users
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link @Active("Tickets","Index")" asp-controller="Tickets" asp-action="Index">
                                        <i class="bi bi-ticket-perforated me-1"></i> @ticketsNavLabel
                                    </a>
                                </li>

                                @if (roleString != "Manager")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @Active("Tickets","MyAssigned")" asp-controller="Tickets" asp-action="MyAssigned">
                                            <i class="bi bi-inbox me-1"></i> Requests
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @Active("Tickets","UserDashboard")" asp-controller="Tickets" asp-action="UserDashboard">
                                            <i class="bi bi-grid me-1"></i> Dashboard
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @Active("Tickets","ManagerDashboard")" asp-controller="Tickets" asp-action="ManagerDashboard">
                                            <i class="bi bi-grid me-1"></i> Dashboard
                                        </a>
                                    </li>
                                }
                            }
                        </ul>

                        <div class="d-flex align-items-center gap-3 ms-auto">
                            <div class="dropdown">
                                <button class="btn btn-light border dropdown-toggle d-flex align-items-center gap-2"
                                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="user-avatar">@Initials(userName)</span>
                                    <span class="d-none d-sm-inline">
                                        <span class="fw-semibold">@userName</span>
                                        <span class="text-muted">(@roleString)</span>
                                    </span>
                                </button>

                                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                    <li>
                                        <span class="dropdown-item-text small text-muted">
                                            Signed in as <strong>@userName</strong>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <img src="~/images/logoo.png" class="navbar-logo" alt="Logo" />
                        </div>
                    }
                    else
                    {
                        <div class="ms-auto d-flex align-items-center">
                            <img src="~/images/logoo.png" class="navbar-logo" alt="Logo" />
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container app-container">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>

    <footer class="app-footer border-top text-muted">
        <div class="container py-3 d-flex flex-wrap justify-content-between align-items-center">
            <div>&copy; 2026 - TicketSystem</div>
            <div class="small fw-semibold text-primary">Designed &amp; Developed by Sultan Aleidi</div>
        </div>
    </footer>

    <!-- Offcanvas: Quick Details (single instance) -->
    <div class="offcanvas offcanvas-end ticket-offcanvas" tabindex="-1" id="ticketDetailsCanvas" aria-labelledby="ticketDetailsCanvasLabel">
        <div class="offcanvas-header">
            <button type="button" class="btn btn-light border ticket-close-btn" data-bs-dismiss="offcanvas" aria-label="Close">
                <i class="bi bi-x-lg"></i>
            </button>

            <div class="ms-2">
                <h5 class="offcanvas-title mb-0" id="ticketDetailsCanvasLabel">Ticket Details</h5>
                <div class="small text-muted">Quick View</div>
            </div>
        </div>

        <div class="offcanvas-body" id="ticketDetailsCanvasBody">
            <div class="text-center py-4 text-muted">
                <div class="spinner-border" role="status" aria-label="Loading"></div>
                <div class="mt-2 small">Loading details...</div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Global helper for loading overlay
        window.AppUI = {
            showLoading: function () {
                var el = document.getElementById('appLoading');
                if (el) el.classList.remove('d-none');
            },
            hideLoading: function () {
                var el = document.getElementById('appLoading');
                if (el) el.classList.add('d-none');
            }
        };

        // Initialize bootstrap toasts (if any exist)
        document.querySelectorAll('.toast').forEach(t => new bootstrap.Toast(t, { delay: 4500 }).show());

        // Offcanvas quick view: only links that contain data-ticket-canvas="1"
        document.addEventListener("click", async function (e) {
            const a = e.target.closest("a[data-ticket-canvas='1']");
            if (!a) return; // Normal link: open full page

            e.preventDefault();

            const url = a.getAttribute("href");
            const body = document.getElementById("ticketDetailsCanvasBody");

            body.innerHTML = `
                <div class="text-center py-4 text-muted">
                    <div class="spinner-border" role="status" aria-label="Loading"></div>
                    <div class="mt-2 small">Loading details...</div>
                </div>
            `;

            const canvasEl = document.getElementById("ticketDetailsCanvas");
            const canvas = bootstrap.Offcanvas.getOrCreateInstance(canvasEl);
            canvas.show();

            try {
                const res = await fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } });
                const html = await res.text();
                body.innerHTML = html;
            } catch (err) {
                body.innerHTML = `<div class="alert alert-danger">Failed to load details.</div>`;
            }
        });

        // Grid header filters / sorting helpers (query-string based)
        (function () {
            function getUrl() {
                return new URL(window.location.href);
            }

            function applyParam(name, value) {
                const url = getUrl();
                if (value === null || value === undefined || value === "") {
                    url.searchParams.delete(name);
                } else {
                    url.searchParams.set(name, value);
                }
                window.location.href = url.toString();
            }

            function applySort(sort, dir) {
                const url = getUrl();
                url.searchParams.set("sort", sort);
                url.searchParams.set("dir", dir);
                window.location.href = url.toString();
            }

            function resetParams(csv) {
                const url = getUrl();
                csv.split(",").map(x => x.trim()).filter(Boolean).forEach(k => url.searchParams.delete(k));
                window.location.href = url.toString();
            }

            // Auto apply text filters with debounce
            let t = null;
            document.addEventListener("input", function (e) {
                const input = e.target.closest(".grid-filter-input");
                if (!input) return;

                clearTimeout(t);
                t = setTimeout(() => {
                    applyParam(input.getAttribute("name"), input.value.trim());
                }, 400);
            });

            // Apply on Enter immediately
            document.addEventListener("keydown", function (e) {
                const input = e.target.closest(".grid-filter-input");
                if (!input) return;

                if (e.key === "Enter") {
                    e.preventDefault();
                    applyParam(input.getAttribute("name"), input.value.trim());
                }
            });

            // Auto apply status select
            document.addEventListener("change", function (e) {
                const sel = e.target.closest(".grid-status-select");
                if (!sel) return;
                applyParam("status", sel.value);
            });

            // Sort buttons inside dropdown
            document.addEventListener("click", function (e) {
                const btn = e.target.closest(".grid-sort-btn");
                if (!btn) return;

                const sort = btn.getAttribute("data-sort");
                const dir = btn.getAttribute("data-dir");
                applySort(sort, dir);
            });

            // Reset button inside dropdown
            document.addEventListener("click", function (e) {
                const btn = e.target.closest(".grid-reset-btn");
                if (!btn) return;

                const csv = btn.getAttribute("data-reset") || "";
                resetParams(csv);
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
